 <!-- form handling -->
 <form action="/api/products" method="POST" id="add_prod">
    <div class="new_prod">
        <div class="form-group">
            <label for="sku" class="text-light">Sku</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="sku" value="" placeholder="1111">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name" value="" placeholder="Duracell">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Price</label>
            <input type="text" name="price" value="" placeholder="7">
        </div>
        <div class="form-group">
            <label for="shipping" class="text-light">Shipping</label>
            <input type="text" name="shipping" value="" placeholder="2">
        </div>
        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <input type="text" name="type" value="" placeholder="Batteries">
        </div>

        <div class="form-group">
            <button type="submit" class="save">Save</button>
        </div>

    </div>
</form>